<h1>edit</h1>
<% if @article.errors.any?  %>
    <ul>
      <% @article.errors.full_messages.each do|msg| %>
          <li>        <%= msg%></li>
      <%end %></ul>
<%end %>

<%= form_for @article do|f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title%><br/>
      <%= f.label :descr%></br>
      <%= f.text_area :description%>
    </p>
    <%= f.submit%>
<% end %>
<%= link_to "back to list",articles_path %>